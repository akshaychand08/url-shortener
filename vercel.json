{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    // Route API calls to the serverless function
    {
      "src": "/api/(.*)",
      "dest": "index.js"
    },
    // Route short URLs (anything that doesn't start with /api/ and isn't a static file)
    // to the serverless function. The static files are served automatically by Vercel.
    {
      "src": "/(.*)",
      "dest": "index.js"
    }
  ]
}

